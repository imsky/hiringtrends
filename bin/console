#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"
require "debug"
require "irb"
require_relative "../lib/hiringtrends"

def run_program(item_id)
  dictionary_url = "https://gist.githubusercontent.com/ryanwi/6135845/raw/80d82437174965a54186b74ca5bc31ff2f9d4779/software-terms.dic"
  hn = HiringTrends::Program.new(dictionary_url:, item_id:)
  hn.fetch_all_submissions
  hn.analyze_submissions
  hn.publish
  hn
end

def reload!(print = true)
  puts "Reloading ..." if print
  root_dir = File.expand_path('..', __dir__)
  reload_dirs = %w[lib]
  reload_dirs.each do |dir|
    Dir.glob("#{root_dir}/#{dir}/**/*.rb").each { |f| load(f) }
  end
  true
end

IRB.start
